<?xml version="1.0" encoding="UTF-8" ?>

<extension version="2.5" type="plugin" group="vmpayment" method="upgrade">

	<name>VMPAYMENT_ROSKASSA</name>

	<author>Syntlex Dev</author>

	<creationDate>2020</creationDate>

	<copyright>(C) 2020 Syntlex Dev. All rights reserved.</copyright>

	<license>GNU/GPLv3 www.gnu.org/licenses/gpl-3.0.html</license>

	<authorEmail>cmsmodulhome@gmail.com</authorEmail>

	<authorUrl>https://syntlex.info/</authorUrl>

	<version>2.5</version>

	<description>Paymant plugin for Roskassa</description>

	<files>

		<filename plugin="roskassa">roskassa.php</filename>

		<filename>index.html</filename>

        

        <filename>ru-RU.plg_vmpayment_roskassa.ini</filename>

        <filename>ru-RU.plg_vmpayment_roskassa.sys.ini</filename>

        <folder>roskassa</folder>

	</files> 

	<languages>

		<language tag="ru-RU">ru-RU.plg_vmpayment_roskassa.ini</language>

		<language tag="ru-RU">ru-RU.plg_vmpayment_roskassa.sys.ini</language>

	</languages>

    

       <vmconfig>

        <fields name="params">

            <fieldset name="basic" addfieldpath="/plugins/vmpayment/roskassa/roskassa/fields">

         <field type="line" default=""/>   

  <field name="u" type="u" 

    label="Callback Url"  />

	  

          

                 

   <field	name="payment_logos"

   directory="images/stories/virtuemart/payment/"

    type="imagelist" 

   label="VMPAYMENT_ROSKASSA_LOGOS"

			description="VMPAYMENT_ROSKASSA_LOGOS_DESC"

		 />

     	<field name="mrh_id" type="text" size="20" label="VMPAYMENT_ROSKASSA_MRH_ID" description="VMPAYMENT_ROSKASSA_MRH_ID_DESCR" default="" />

		<field name="mrh_psk"  type="text" size="20" label="VMPAYMENT_ROSKASSA_PSK" description="VMPAYMENT_ROSKASSA_PSK_DESCR" default="" />

    

    	<field name="val" type="hidden" default="RUB" label="VMPAYMENT_ROSKASSA_VAL" description="VMPAYMENT_ROSKASSA_VAL">

		 <option value="RUB">VMPAYMENT_ROSKASSA_SELVAL1</option>

     	</field>

    	<field name="lang" type="list" default="0" 

        label="VMPAYMENT_ROSKASSA_LANG" description="VMPAYMENT_ROSKASSA_LANG">

			<option value="ru">VMPAYMENT_ROSKASSA_LANG_RU</option>

			<option value="en">VMPAYMENT_ROSKASSA_LANG_EN</option>

		</field>

		<field name="fiscalization_tax" type="list" default="0" label="VMPAYMENT_ROSKASSA_FISCAL_TAX_LABEL" description="VMPAYMENT_ROSKASSA_FISCAL_TAX_DESC">

			<option value="none">VMPAYMENT_ROSKASSA_FISCAL_TAX_NONE</option>

			<option value="vat10">VMPAYMENT_ROSKASSA_FISCAL_TAX_VAT10</option>

			<option value="vat18">VMPAYMENT_ROSKASSA_FISCAL_TAX_VAT18</option>

			<option value="vat110">VMPAYMENT_ROSKASSA_FISCAL_TAX_VAT110</option>

			<option value="vat118">VMPAYMENT_ROSKASSA_FISCAL_TAX_VAT118</option>

		</field>

		

		<field name="status_pending" type="vmorderstate" scope="com_virtuemart" default="P" label="VMPAYMENT_ROSKASSA_STATUS_PENDING" description="VMPAYMENT_ROSKASSA_STATUS_PENDING_EXPLAIN" />

		<field name="status_success" type="vmorderstate" scope="com_virtuemart" default="C" label="VMPAYMENT_ROSKASSA_STATUS_SUCCESS" description="VMPAYMENT_ROSKASSA_STATUS_SUCCESS_EXPLAIN" />

		<field name="tax_id" type="vmtaxes" scope="com_virtuemart"  label="VMPAYMENT_ROSKASSA_TAX" description="VMPAYMENT_ROSKASSA_TAX_DESC" />

    </fieldset>

        </fields>

    </vmconfig>

</extension>